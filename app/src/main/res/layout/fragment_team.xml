<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Base.Theme.PracticumAndroidDiploma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/team"
        style="@style/team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottom_nav_team"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/team_main"
        style="@style/team_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Над приложением\nработали"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/team"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/develop1"
        style="@style/developers_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ИванГреков"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/team_main"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/develop2"
        style="@style/developers_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Владислав Поликушин"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/develop1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/develop3"
        style="@style/developers_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дмитрий Козловский"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/develop2"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

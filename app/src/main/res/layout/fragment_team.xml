<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Base.Theme.PracticumAndroidDiploma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/tv_team"
        style="@style/team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottom_nav_team"
        android:layout_marginStart="@dimen/team_member_top_margin_16"
        android:layout_marginTop="@dimen/team_member_top_margin_20"
        android:layout_marginEnd="@dimen/team_member_top_margin_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_team_main"
        style="@style/team_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developers"
        android:layout_marginStart="@dimen/team_member_top_margin_16"
        android:layout_marginTop="@dimen/team_member_top_margin_44"
        android:layout_marginEnd="@dimen/team_member_top_margin_16"
        app:layout_constraintTop_toBottomOf="@id/tv_team"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_develop1"
        style="@style/developers_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developer1"
        android:layout_marginTop="@dimen/team_member_top_margin_32"
        android:layout_marginHorizontal="@dimen/team_member_top_margin_16"
        app:layout_constraintTop_toBottomOf="@id/tv_team_main"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_develop2"
        style="@style/developers_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developer2"
        android:layout_marginTop="@dimen/team_member_top_margin_16"
        android:layout_marginHorizontal="@dimen/team_member_top_margin_16"
        app:layout_constraintTop_toBottomOf="@id/tv_develop1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_develop3"
        style="@style/developers_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developer3"
        android:layout_marginTop="@dimen/team_member_top_margin_16"
        android:layout_marginHorizontal="@dimen/team_member_top_margin_16"
        app:layout_constraintTop_toBottomOf="@id/tv_develop2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

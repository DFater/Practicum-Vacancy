<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="9dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_vacancy_image"
        android:layout_width="@dimen/search_iv_size_48"
        android:layout_height="@dimen/search_iv_size_48"
        android:background="@drawable/iv_vacancy_border"
        android:cropToPadding="true"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_vacancy_placeholder"
        android:contentDescription="@string/vacancy_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_vacancy_and_area"
            style="@style/search_tv_medium_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Разработчик платформы данных, Санкт-Петербург" />

        <TextView
            android:id="@+id/tv_employer_name"
            style="@style/search_tv_display_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Алиса" />

        <TextView
            android:id="@+id/tv_salary"
            style="@style/search_tv_display_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="от 1 000 до 1 500 €" />

    </LinearLayout>

</LinearLayout>

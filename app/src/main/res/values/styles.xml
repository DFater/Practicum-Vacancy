<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="developers_team">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="team">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="team_main_title">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="header_tv_style">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_18</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="arrow_back_iv_style" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_20</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="srcCompat">@drawable/icon_arrow_back</item>
    </style>

    <style name="search_et_style">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="cursorColor">@drawable/et_cursor</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_marginVertical">@dimen/margin_8</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_60</item>
        <item name="android:paddingVertical">@dimen/margin_16</item>
        <item name="android:hint">@string/enter_request</item>
    </style>

    <style name="bottom_navigation_view_style">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">@dimen/margin_8</item>
        <item name="itemPaddingBottom">@dimen/margin_8</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="filtering_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="boxStrokeWidth">@dimen/margin_0</item>
        <item name="boxStrokeWidthFocused">@dimen/margin_0</item>
        <item name="endIconMode">custom</item>
        <item name="endIconContentDescription">\></item>
        <item name="endIconTint">?attr/colorOnPrimary</item>
        <item name="android:editable">false</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeErrorColor">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="filtering_text_input_et">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="salary_filtering_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="boxCollapsedPaddingTop">@dimen/margin_8</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeWidth">@dimen/margin_0</item>
        <item name="boxStrokeWidthFocused">@dimen/margin_0</item>
        <item name="endIconDrawable">@drawable/icon_cross</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/black_universal</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="hint_salary_filtration">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="salary_filtering_input_edit_text">
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="salary_filtration_edit_text">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="search_btn_filter_style">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:paddingHorizontal">@dimen/margin_12</item>
        <item name="android:paddingVertical">@dimen/margin_12</item>
        <item name="android:layout_marginVertical">@dimen/margin_8</item>
        <item name="android:layout_marginStart">@dimen/margin_4</item>
        <item name="android:layout_marginEnd">@dimen/margin_8</item>
    </style>

    <style name="search_tv_header_style" parent="header_tv_style">
        <item name="android:layout_marginTop">@dimen/margin_0</item>
    </style>

    <style name="search_btn_clear_style">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">@dimen/margin_12</item>
        <item name="android:paddingVertical">@dimen/margin_12</item>
        <item name="android:layout_marginEnd">@dimen/margin_20</item>
        <item name="tint">@color/black_universal</item>
    </style>

    <style name="search_tv_vacancy_counter_style">
        <item name="android:background">@drawable/tv_vacancy_counter_background</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">@dimen/margin_4</item>
        <item name="android:paddingHorizontal">@dimen/margin_12</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="android:layout_marginTop">@dimen/margin_3</item>
    </style>

    <style name="search_tv_medium_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="search_tv_display_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="additional_heading_vacancy">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_vacancy">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_vacancy_blue">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="main_heading_vacancy">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="name_vacancy">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="button_similar">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/margin_12</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="arrow_forward_style">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/margin_12</item>
        <item name="android:layout_marginEnd">@dimen/margin_12</item>
        <item name="android:layout_marginBottom">@dimen/margin_12</item>
    </style>


    <style name="country_item_tv">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:minHeight">@dimen/margin_60</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="get_list_error_placeholder_tv">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/margin_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_tv_size_text_22</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="filtration_industry_et_style">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:inputType">text</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/margin_16</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor</item>
        <item name="android:layout_marginVertical">@dimen/margin_8</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_60</item>
        <item name="android:paddingVertical">@dimen/margin_16</item>
    </style>

    <style name="industry_item_tv">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:minHeight">@dimen/margin_60</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="filtration_industry_item_style">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
        <item name="drawableTint">@color/blue</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>

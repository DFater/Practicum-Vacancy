<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="developers_team">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/team_member_size_text_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="team">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/team_member_size_text_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="team_main_title">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/team_member_size_text_32</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="header_tv_style">
        <item name="android:layout_marginStart">@dimen/header_tv_start_margin_16</item>
        <item name="android:layout_marginTop">@dimen/header_tv_top_margin_18</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/header_tv_size_text_22</item>
    </style>

    <style name="arrow_back_iv_style">
        <item name="android:layout_marginStart">@dimen/arrow_back_start_margin_8</item>
        <item name="android:layout_marginTop">@dimen/arrow_back_top_margin_20</item>
        <item name="android:src">"@drawable/icon_arrow_back"</item>

    </style>

    <style name="search_et_style">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/search_et_size_text_16</item>
    </style>

    <style name="bottom_navigation_view_style">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">@dimen/bottom_nav_top_padding_8</item>
        <item name="itemPaddingBottom">@dimen/bottom_nav_bottom_padding_8</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_size_text_12</item>
    </style>

    <style name="search_btn_filter_style">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:paddingHorizontal">@dimen/search_btn_filter_padding_horizontal_16</item>
        <item name="android:paddingVertical">@dimen/search_btn_filter_padding_vertical_18</item>
        <item name="android:layout_marginVertical">@dimen/search_et_margin_vertical_8</item>
        <item name="android:layout_marginStart">@dimen/search_btn_filter_margin_start_4</item>
        <item name="android:layout_marginEnd">@dimen/search_btn_filter_margin_end_8</item>
    </style>

    <style name="search_tv_header_style" parent="header_tv_style">
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="search_btn_clear_style">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingHorizontal">@dimen/search_btn_clear_padding_12</item>
        <item name="android:paddingVertical">@dimen/search_btn_clear_padding_12</item>
        <item name="android:layout_marginEnd">@dimen/search_btn_clear_margin_end_20</item>
        <item name="tint">@color/black_universal</item>
    </style>

    <style name="search_tv_vacancy_counter_style">
        <item name="android:background">@drawable/tv_vacancy_counter_background</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">@dimen/search_tv_vacancy_counter_padding_vertical_4</item>
        <item name="android:paddingHorizontal">@dimen/search_tv_vacancy_counter_padding_horizontal_12</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="android:layout_marginTop">@dimen/search_tv_vacancy_counter_margin_top_3</item>
    </style>

    <style name="search_tv_medium_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="search_tv_display_style">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="additional_heading_vacancy">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/team_member_size_text_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_vacancy">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/team_member_size_text_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_vacancy_blue">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/team_member_size_text_16</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="main_heading_vacancy">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/team_member_size_text_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="name_vacancy">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/team_member_size_text_32</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="button_similar">
        <item name="android:textSize">@dimen/team_member_size_text_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/margin_12</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>

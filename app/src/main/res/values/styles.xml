<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="developers_team">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/team_member_size_text_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="team">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/team_member_size_text_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="team_main_title">
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/team_member_size_text_32</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="header_tv_style">
        <item name="android:layout_marginStart">@dimen/header_tv_start_margin_16</item>
        <item name="android:layout_marginTop">@dimen/header_tv_top_margin_18</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/header_tv_size_text_22</item>
    </style>

    <style name="arrow_back_iv_style">
        <item name="android:layout_marginStart">@dimen/arrow_back_start_margin_8</item>
        <item name="android:layout_marginTop">@dimen/arrow_back_top_margin_20</item>
        <item name="android:src">"@drawable/icon_arrow_back"</item>

    </style>

    <style name="search_et_style">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textSize">@dimen/search_et_size_text_16</item>
    </style>

    <style name="bottom_navigation_view_style">
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@color/bottom_nav_item</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">@dimen/bottom_nav_top_padding_8</item>
        <item name="itemPaddingBottom">@dimen/bottom_nav_bottom_padding_8</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_size_text_12</item>
    </style>

</resources>
